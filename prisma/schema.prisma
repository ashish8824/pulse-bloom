datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())

  moods   MoodEntry[]
  habits  Habit[]
}

model MoodEntry {
  id        String   @id @default(uuid())
  moodScore Int
  emoji     String
  journalId String?
  userId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum HabitFrequency {
  daily
  weekly
}

model Habit {
  id          String   @id @default(uuid())
  title       String
  description String?
  frequency   HabitFrequency
  userId      String
  createdAt   DateTime @default(now())

  user    User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  logs    HabitLog[]
}

model HabitLog {
  id        String   @id @default(uuid())
  habitId   String
  date      DateTime
  completed Boolean  @default(true)
  createdAt DateTime @default(now())

  habit Habit @relation(fields: [habitId], references: [id], onDelete: Cascade)

  @@unique([habitId, date])
}